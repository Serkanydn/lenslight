<%- include("partials/_header") %>

   <!-- body -->

   <body class="main-layout inner_page">
      <!-- loader  -->
      <%- include("partials/_loader") %>
         <!-- end loader -->

         <!-- header -->
         <%- include("partials/_menu") %>
            <!-- end header inner -->

            <!-- about -->
            <div class="about">
               <div class="container">
                  <div class="row">
                     <div class="col-md-6">
                        <div class="titlepage text_align_left">

                           <h3 style="font-size:24px; color:white">
                              <%= photo.name %>
                           </h3>
                           <p>
                              <%=photo.description%>
                           </p>
                           <a class="read_more" href="/users/<%= photo.user._id %>">
                              Photographer: <%= photo.user.userName %>
                           </a>


                           <div style="margin-top: 30px ;">
                              <ul style="display: flex; justify-content: space-between;">
                                 <li><button style="min-width: 266px;" class="read_more" data-toggle="modal"
                                       data-target="#updateModal">Update</button></li>
                                 <li><a style="min-width: 266px;" class="read_more"
                                       href="/photos/<%= photo._id %>?_method=DELETE"
                                       onclick="return confirm('Do you want to delete the photo')">Delete</a></li>
                              </ul>
                           </div>

                        </div>
                     </div>
                     <div class="col-md-6">
                        <div class="about_img">
                           <figure><img src="<%= photo.url %>" alt="<%= photo.name %>"></figure>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <!-- end about -->

            <!-- end footer -->
            <%- include("partials/_footer") %>
               <!-- end footer -->

               <!-- Javascript files-->
               <%- include("partials/_jsFiles") %>

   </body>

   </html>